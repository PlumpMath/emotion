(ns emotion.emote
  (:use quil.core))


;; draw node circle
(defn draw-node-dot [x y size]
  (stroke [60 60 180])
  (stroke-weight 0)
  (fill [60 60 180])
  (ellipse x y size size))

;; draw node text
;; draw person cicle
;; draw node link
;; draw person-link


(defn setup []
  (smooth)
  (frame-rate 30)
  (background 255)
  )

(defn draw []
  (draw-node-dot 300 300 20)
  )